<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="$(var.UpgradeCode)"
    Version="$(var.Version)" Language="1033" Name="Tachidesk Flutter" Manufacturer="Suwayomi">
    <Package InstallerVersion="300" Compressed="yes" />
    <Media Id="1" Cabinet="Tachidesk_Flutter.cab" EmbedCab="yes" />

    <Condition Message="This version of Windows does not support deploying 64-bit packages.">
      VersionNT64
    </Condition>

    <!-- Directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLDIR" Name="Tachidesk-Flutter" >
          <Directory Id="data"/>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ProgramMenuDir" Name="Tachidesk-Flutter">
          <Component Id="ProgramMenuDir" Guid="*">
            <RemoveFolder Id="ProgramMenuDir" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Type="string" Value="" KeyPath="yes"/>
          </Component>
        </Directory>
      </Directory>
      <Directory Id="DesktopFolder" />
    </Directory>

    <!-- Component -->
    <DirectoryRef Id="INSTALLDIR">
      <Component Id="tachidesk_flutter.exe" Guid="*" Win64="yes">
        <File Id="tachidesk_flutter.exe" Source="$(var.SourceDir)\tachidesk_flutter.exe" KeyPath="yes">
          <Shortcut Id="tachidesk_flutter_desktop.lnk" Name="Tachidesk Flutter" Directory="DesktopFolder"
            WorkingDirectory="INSTALLDIR" Icon="tachidesk_flutter.ico" IconIndex="0" Advertise="yes" />
          <Shortcut Id="tachidesk_flutter_program_menu.lnk" Name="Tachidesk Flutter" Directory="ProgramMenuDir"
            WorkingDirectory="INSTALLDIR" Icon="tachidesk_flutter.ico" IconIndex="0" Advertise="yes"
            Description="A free and open source manga reader to read manga from a Tachidesk-Server instance." />
        </File>
      </Component>

      <Component Id="vcruntime140_1.dll" Guid="*" Win64="yes">
        <File Id="vcruntime140_1.dll" Source="$(var.SourceDir)\vcruntime140_1.dll" KeyPath="yes"/>
      </Component>
      <Component Id="vcruntime140.dll" Guid="*" Win64="yes">
        <File Id="vcruntime140.dll" Source="$(var.SourceDir)\vcruntime140.dll" KeyPath="yes"/>
      </Component>
      <Component Id="url_launcher_windows_plugin.dll" Guid="*" Win64="yes">
        <File Id="url_launcher_windows_plugin.dll" Source="$(var.SourceDir)\url_launcher_windows_plugin.dll" KeyPath="yes"/>
      </Component>
      <Component Id="msvcp140.dll" Guid="*" Win64="yes">
        <File Id="msvcp140.dll" Source="$(var.SourceDir)\msvcp140.dll" KeyPath="yes"/>
      </Component>
      <Component Id="flutter_windows.dll" Guid="*" Win64="yes">
        <File Id="flutter_windows.dll" Source="$(var.SourceDir)\flutter_windows.dll" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Feature -->
    <Feature Id="TachideskFlutter" Title="Tachidesk-Flutter" Level="1">
      <ComponentGroupRef Id="data" />
      <ComponentRef Id="tachidesk_flutter.exe" />
      <ComponentRef Id="ProgramMenuDir" />
      <ComponentRef Id="vcruntime140_1.dll" />
      <ComponentRef Id="vcruntime140.dll" />
      <ComponentRef Id="url_launcher_windows_plugin.dll"/> 
      <ComponentRef Id="msvcp140.dll" />
      <ComponentRef Id="flutter_windows.dll"/>
    </Feature>

    <Icon Id="tachidesk_flutter.ico" SourceFile="$(var.Icon)" />
    <!-- Icon in Add/Remove Programs -->
    <Property Id="ARPPRODUCTICON" Value="tachidesk_flutter.ico" /> 
  </Product>
</Wix>
